@page "/reset-password"

<div class="container login-page">
    <div class="row align-items-center flex-column">
        <NavLink class="navbar-brand d-flex h-100 col-auto" href="">
            <img src="Images/logo.svg" alt="Logo" width="60" height="70" class="d-inline-block align-text-top">
            <h3 class="d-flex align-self-center">Progresso</h3>
        </NavLink>
        <div class="card text-bg-dark mt-5 flex-column d-flex border border-dark-subtle login-page__card" style="max-width: 25rem;">
            <div class="card-body">
                <p>Enter the email address associated with your account and we'll send you a link to reset your password</p>
                <div class="input-group mb-3 mt-3">
                    <input type="text" class="form-control" placeholder="Email" aria-label="Email" aria-describedby="basic-addon2">
                </div>
                <div class="d-grid gap-2 mb-3">
                    <button class="btn btn-primary" type="button" value="login">Continue</button>
                </div>
                <div class="d-flex justify-content-center">
                    <h6 class="pe-1">Don't have an account?</h6><NavLink href="login" class="link-underline-dark "><h6>Sign Up</h6></NavLink>
                </div>
            </div>
        </div>
    </div>
</div>
